[Unit]
Description=dgraph.io data server
Wants=network.target
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/dgraph zero --my=$(hostname):5080 --peer <zero0>:5080 -w /var/run/dgraph/w --idx=2 --replicas 3
StandardOutput=journal
StandardError=journal
User=dgraph
Group=dgraph

[Install]
WantedBy=multi-user.target
