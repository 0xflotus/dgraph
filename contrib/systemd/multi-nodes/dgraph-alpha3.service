[Unit]
Description=dgraph.io data server
Wants=network.target
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/dgraph alpha --my=$(hostname):7080 --lru_mb 2048 --zero <zero0>:5080,<zero1>:5080,<zero3>:5080 -p /var/run/dgraph/p -w /var/run/dgraph/w
StandardOutput=journal
StandardError=journal
User=dgraph
Group=dgraph

[Install]
WantedBy=multi-user.target
